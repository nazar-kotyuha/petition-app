<h1 class="pb-4">Explore Latest</h1>

<div class="d-flex mb-2 align-items-center">
  <h2>The latest created petitions</h2>
</div>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

  <% if(petitions != '') { %>
    <% petitions.forEach(function(petition, index){ %>
    <a href="/petition/<%= petition._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/<%= petition.image %>" alt="<%= petition.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= petition.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>