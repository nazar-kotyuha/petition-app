<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Edit Your Category</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Update your category to reach thousands of people around the world. Fill out the form below to make changes.</p>
  </div>
</div>
<div class="row justify-content-center">

<% if(infoSubmitObj != '') { %>
  <div class="col-8 alert alert-success" role="alert">
    <%= infoSubmitObj %>
  </div>
<% } %>

<% if(infoErrorsObj != '') { %>
  <div class="col-8 alert alert-danger" role="alert">
    <%= infoErrorsObj[0].message %>
  </div>
<% } %>
  
<div class="col-8">


<form action="/edit/category/<%= category._id %>?_method=PUT" enctype="multipart/form-data" method="POST">

  <div class="row g-3">

    <div class="col-12">
      <label for="name" class="form-label">Category Name</label>
      <input type="text" name="name" id="name" class="form-control" value="<%= category.name %>" required>
    </div>

    <div class="col-12">
      <label for="image">Category Image</label>
      <input type="file" class="form-control" name="image" accept="image/*" onchange="previewImage(event)">
      <% if (typeof category.image !== 'undefined' && category.image) { %>
        <img id="currentImage" src="/uploads/<%= category.image %>" alt="Current Image" class="current-image" style="max-width: 200px; margin-top: 10px;">
      <% } %>
    </div>
    
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Edit Category</button>
    </form>
      <form id="deleteForm" action="/categories/<%= category._id %>?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
      </form>
    </div>

  </div>
  </div>
</div>