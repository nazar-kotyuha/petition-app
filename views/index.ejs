<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
      <img src="/img/main_page.jpg" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy">
    </div>
  
    <div class="col-12 col-lg-6">
      <h1 class="display-5 fw-bold mb-3">Your opinion matters</h1>
      <p class="lead">
        Discover a vast array of impactful petition categories on our platform, ranging from social justice initiatives to environmental campaigns. Join the movement and explore our extensive collection of petitions, including calls for legislative change, human rights advocacy, animal welfare movements, community empowerment initiatives, climate action campaigns, and more. Take a stand, lend your voice, and make a difference today.
      </p>
  
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Latest</a>
        <a href="/explore-random" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Show Random</a>
      </div>
  
    </div>
  
  </div>


  <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(categories != '') { %>
      <% categories.forEach(function(category, index) {  %>
    <a href="categories/<%= category._id %>" class="col text-center category__link">
      <div class="category__img shadow">
        <img src="uploads/<%- category.image %>" alt="<%- category.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%- category.name %></div>
    </a>
    <% }) %>
    <% } %>

    <a href="/categories" class="col text-center category__link">
      <div class="category__img shadow">
        <img src="img/view_all.jpeg" alt="View all categories" loading="lazy">
      </div>
      <div class="pt-1">View All</div>
    </a>
  </div>

  <section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
      <h2>Latest petitions</h2>
      <a href="/explore-latest" class="ms-auto">View More</a>
    </div>
  
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  
      <% if(petitions != '') { %>
        <% petitions.latest.forEach(function(petition, index){ %>
        <a href="/petition/<%= petition._id %>" class="col text-center category__link">
          <div class="category__img category__img--large shadow">
            <img src="/uploads/<%= petition.image %>" alt="<%= petition.name %>" loading="lazy">
          </div>
          <div class="pt-1"><%= petition.name %></div>
        </a>
        <% }) %>
      <% } else { %>
        <p>No items found.</p>
      <% } %>
    </div>
  
  </section>


  
 