<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit Your Petition</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Share your petition with thousands of people around the world. Fill out the form below to get started.</p>
  </div>
</div>
<div class="row justify-content-center">

<% if(infoSubmitObj != '') { %>
  <div class="col-8 alert alert-success" role="alert">
    <%= infoSubmitObj %>
  </div>
<% } %>

<% if(infoErrorsObj != '') { %>
  <div class="col-8 alert alert-danger" role="alert">
    <%= infoErrorsObj[0].message %>
  </div>
<% } %>
  
<div class="col-8">


<form action="/submit-petition" enctype="multipart/form-data" method="POST">

  <div class="row g-3">

    <div class="col-12">
      <label for="name" class="form-label">Petition Name</label>
      <input type="text" name="name" id="name" class="form-control" required>
    </div>
    
    <div class="col-12">
      <label for="description" class="form-label">Description</label>
      <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
    </div>

    <div class="col-12">
      <label for="petitionText" class="form-label">Petition Text</label>
      <textarea name="petitionText" id="petitionText" class="form-control" cols="30" rows="6"></textarea>
    </div>

    <div class="col-12" style="display: none;">
      <label for="creator" class="form-label">Creator</label>
      <input type="text" name="creator" id="creator" value="<%= user._id %>" style="visibility: hidden;" class="form-control" required>
    </div>

    <div class="col-12">
      <label for="category">Select Category</label>
      <select class="form-select form-control" name="category" aria-label="Category">
        <option selected>Select Category</option>
        <% if(typeof categories !== 'undefined' && categories.length > 0) { %>
          <% categories.forEach(function(category, index) {  %>
            <option value="<%= category._id %>"><%= category.name %></option>
        <% }) %>
        <% } %>
      </select>
    </div>

    <div class="col-12">
      <label for="name" class="form-label">Tags</label><br>
      <small>Example: activism</small>
      <div class="tagsList">
        <div class="tagDiv mb-1">
          <input type="text" name="tags" class="form-control">
        </div>
      </div>
    </div>

    <div class="col-12">
      <button type="button" class="btn btn-outline-primary" id="addTagsBtn">+ Tag</button>
    </div>

    <div class="col-12">
      <label for="image">Petition Image</label>
      <input type="file" class="form-control" name="image" accept="image/*" onchange="previewImage(event)" required>
      <img id="currentImage" class="current-image" style="max-width: 200px; margin-top: 10px;">
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-primary">Submit Petition</button>
    </div>

  </div>

</form>

  </div>
</div>